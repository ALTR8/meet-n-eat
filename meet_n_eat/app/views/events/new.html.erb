<div class="container-fluid">
<h1>Create a new Event:</h1>
<div class="row">
<%= form_for (@event), validate: true do |f| %>
	<div class="col col-lg-4 offset-lg-2">
	<%= f.label :restaurant %><br>
	<%= f.text_field :spot, class: "form-control" %><br>
	<%= f.label :location %><br>
	<%= f.text_field :location, class: "form-control" %><br>
	<%= f.label :cuisine %><br>
	<%= f.text_field :cuisine, class: "form-control" %><br>
	<%= f.label :time%><br>
	<%= f.time_select :time, {:minute_step => 5, :ampm => true} %><br></br>
	</div>

	<div class="col-lg-6 form-group">
		<div id="category-select">
		<h3> Price Categories: </h3>
		<div class="radio">
			<label class="form-check-label"> <%= f.radio_button :budget, "inexpensive", checked: true, class: "form-check-input"%>
			Inexpensive </label>
		</div>
		<div class="radio">
			<label class="form-check-label"> <%= f.radio_button :budget, "moderate", class: "form-check-input"%> 
			Moderate </label>
		</div>
		<div class="radio">
			<label class="form-check-label"> 
				<%= f.radio_button :budget, "pricey", class: "form-check-input"%>
			Pricey </label>
		</div>
		<div class="radio">
			<label class="form-check-label"> 
			<%= f.radio_button :budget, "high-end", class: "form-check-input"%>
			High-End </label>
		</div>
		<br></br>
		<%= f.submit "Create Event", class: "btn btn-primary btn-warning"%>
		</div>
	</div>
<%end%><br>
</div>
</div>

<br></br>
<%=link_to "go home", root_path %>
