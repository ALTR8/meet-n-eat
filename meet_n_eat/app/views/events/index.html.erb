<% if @personal %>

	<% if @my_events.empty? %>
		<h3>Oops! Looks like you do not have any meal plans. Maybe <%= link_to("create", new_event_path) %> one?<h3>
	<% else %>
		<% @my_events.each do |event| %>
			<p>You are joining <%= link_to event.host.first_name, account_path(event.host.id) %>'s event at <%= event.spot %> for around <%= link_to "meal", event_path(event.id) %> </p>
			<% if (event.host == current_account) %>
				<%= button_to "Delete", event_path(event), {method: :delete, class: "btn btn-warning btn-sm"}%>
			<% else %>
				<%= button_to "Leave", leave_path(event), class: "btn btn-danger btn-sm" %>
			<% end %>
			<br>
		<% end %>
	<% end %>

<% else %>

	<%= form_tag(events_path, method: :get) do %>
	  <%= text_field_tag :term, params[:term], placeholder: "search events" %>
	  <%= submit_tag 'Search', name: nil %>
	<% end %>

	<% if @available_events.empty? %>

		<h3>Oops! Looks like no one else has made a meal plan yet. Maybe <%= link_to("create", new_event_path) %> one?<h3>

	<% else %>

		<div class="find-events-table">
			<h2>Find Events</h2>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Events Listed By Other People:</th>
					</tr>
				</thead>

				<tbody>
						<% @available_events.each do |event| %>
							<tr>
								<td><%= link_to event.host.first_name, account_path(event.host) %> is having <%= link_to "meal", event_path(event) %> at <%= event.spot %></td>
								<td><%= button_to "Join", join_path(event), class: "btn-join" %></td> <br>
								<br>
							</tr>
						<% end %>
			  </tbody>
	<% end %>

<% end %>
