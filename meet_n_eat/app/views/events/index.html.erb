<% if @personal %>

	<% @my_events.each do |event| %>
		You are joining <%= link_to event.host.first_name, account_path(event.host.id) %>'s event at <%= event.spot %> for around <%= link_to "meal", event_path(event.id) %>
		<% if (event.host == current_account) %>
			<%= button_to "Delete Event", event_path(event), {method: :delete}, id: "butn-delete" %>
		<% else %>
			<%= button_to "Leave Event", leave_path(event), id: "butn-leave" %>
		<% end %>
		<br>
	<% end %>

<% else %>

	<% @available_events.each do |event| %>
		<%= link_to event.host.first_name, account_path(event.host) %> is having <%= link_to "meal", event_path(event) %> at <%= event.spot %> 
		<%= button_to "Join Event", join_path(event), id: "butn-join" %>
		<br>
	<% end %>

<% end %>