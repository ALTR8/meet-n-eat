<div class="container-fluid">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<h1>Sign Into Your Account!</h1>
			 <%= form_for @account, url: signin_path, method: :post do |f| %>
			 	<%= f.label :username%>
			 	<%= f.text_field :username, class: "form-control" %>
			 	<%= f.label :password %>
			 	<%= f.password_field :password, class: "form-control" %>
			 	<br>
			 	<%= f.submit "Sign In", class: "btn btn-primary btn-success" %>
			 <%end%>
			 <br>
			 <h4>If you do not yet have an account <%= link_to "click here", new_account_path %> to sign up!</h4>
		 </div>
	 </div>
 </div>
 <h4><%= link_to "go home", root_path %></h5>
