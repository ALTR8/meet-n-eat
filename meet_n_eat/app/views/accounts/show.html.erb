<section class="card">
  <figure class="panel meta">
     <%= image_tag @account.gravatar_url, class: "avatar", height: '128', width: '128' %>
    <figcaption>
      <h1 class="name"><%= @account.username%></h1>
    </figcaption>
  </figure>
  
  <div class="panel info">
    <dl class="skillz">
      <dt>Biography:</dt>
      <dd>100</dd>
      <dt><%=@account.biography%></dt><br></br>
      <dt>Favorite Food:</dt>
      <dd>100</dd>
      <dt><%=@account.favorite_food%></dt>
    </dl>
    
  </div>
  
</section>
