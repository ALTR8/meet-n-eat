<section class="card">
  <figure class="panel meta">
     <%= image_tag @account.gravatar_url, class: "avatar", height: '128', width: '128' %>
    <figcaption>
      <h1 class="name"><%= @account.username%></h1>
    </figcaption>
  </figure>
  
  <div class="panel info">
    <dl class="skillz">
    <% if current_account.id == params[:id].to_i %>
      <dt><%= link_to "Biography:", edit_account_path(current_account) %></dt>
      <dd>100</dd>
      <dt><%=@account.biography%></dt>
      <dt><%=link_to "Favorite Food:", edit_account_path(current_account) %></dt>
      <dd>100</dd>
      <dt><%=@account.favorite_food%></dt>
    <% else %>
      <dt>Biography:</dt>
      <dd>100</dd>
      <dt><%=@account.biography%></dt>
      <dt>Favorite Food</dt>
      <dd>100</dd>
      <dt><%=@account.favorite_food%></dt>
    <% end %>

    </dl>
    
  </div>
  
</section>
